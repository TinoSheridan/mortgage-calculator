[MASTER]
ignore=.git,__pycache__,build,dist,.venv,backups,test_config,versions
extension-pkg-whitelist=numpy,pandas
jobs=4

[MESSAGES CONTROL]
# Disable many messages initially to avoid overwhelming errors in existing code
disable=C0103,C0111,C0303,W0613,R0903,R0201,R0902,R0913,R0914,R0915,W0703,C0330,C0326,C0301,C0302,C0413,R0904,R0912,R0801,C0415,W0612,E1101,W0621,W0622,W0611,C0116,C0115,C0114,R0401,C0103,R0205,R0901,C0411,R0916,W0212,E1136,W0631,C0103,R0914,R0915,R1702,C0209,E1101,R0903,E0401,W0612,W0718

[FORMAT]
max-line-length=100
single-line-if-stmt=yes

[SIMILARITIES]
min-similarity-lines=6
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[DESIGN]
max-args=8
max-attributes=20
max-branches=15
max-locals=25
